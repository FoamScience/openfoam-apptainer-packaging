# ---------------------------------------------------------------------------
#
# Create Ubuntu-based Foam-Extend image
#
# Build
#   apptainer build fe.sif foam-extend.def
#
# Note
#   apptainer version 1.3.1
#
# ---------------------------------------------------------------------------
Bootstrap: localimage
From: containers/ubuntu-{{ UBUNTU_VERSION }}-ompi-{{ OMPI_VERSION }}.sif

%arguments
    UBUNTU_VERSION=24.04
    OMPI_VERSION=4.1.5
    OF_VERSION=5.0
    OF_BRANCH=master

%post
    DEBIAN_FRONTEND=noninteractive
    apt-get update
    apt-get -y install --no-install-recommends \
        binutils-dev cmake flex zlib1g-dev libncurses-dev bison libbison-dev libfl-dev \
        python3 libpython3-dev libxt-dev rpm mercurial apt-utils\
        patch libmetis-dev libscotch-dev libparmetis-dev
    mkdir -p /opt/foam
    git clone --single-branch --branch {{ OF_BRANCH }} --depth 1 \
        git://git.code.sf.net/p/foam-extend/foam-extend-{{ OF_VERSION }} \
        /opt/foam/foam-extend-{{ OF_VERSION }}
    sed -i 's|^foamInstall.*|foamInstall=/opt/foam|' /opt/foam/foam-extend-{{ OF_VERSION }}/etc/bashrc
    nProcs=$(nproc)
    /bin/bash -c "cd /opt/foam/foam-extend-{{ OF_VERSION }} && source etc/bashrc && ./Allwmake.firstInstall -j $nProcs"
    OF_COMMIT_HASH=$(git -C /opt/foam/foam-extend-{{ OF_VERSION }} rev-parse HEAD)
    jq --arg app openfoam --arg commit $OF_COMMIT_HASH \
        --arg branch {{ OF_BRANCH }} \
        '.[$app] |= if . == null then
        {
            fork: "foam-extend",
            branch: $branch,
            commit: $commit,
            version: "{{ OF_VERSION }}"
        }
        else . +
        {
            fork: "foam-extend",
            branch: $branch,
            commit: $commit,
            version: "{{ OF_VERSION }}"
        } end' /apps.json > /tmp/apps.json
    mv /tmp/apps.json /apps.json

%runscript
    /bin/bash -c 'cd /opt/foam/foam-extend-{{ OF_VERSION }} && source etc/bashrc && mkdir -p $FOAM_USER_LIBBIN && mkdir -p $FOAM_USER_APPBIN'
    if [ $# -eq 0 ]; then
        /bin/bash -c "source /opt/foam/foam-extend-{{ OF_VERSION }}/etc/bashrc && /bin/bash --login"
    else
        /bin/bash -c "source /opt/foam/foam-extend-{{ OF_VERSION }}/etc/bashrc && $@"
    fi

%labels
    Maintainer Mohammed Elwardi Fadeli
    Description Ubuntu-based Foam-Extend image with OpenMPI
